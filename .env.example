# API Keys (all free tier)
OPENAI_API_KEY=your_openai_api_key_here
OPENWEATHER_API_KEY=your_free_weather_api_key

# Database
DUCKDB_PATH=./data/baseball.db

# Redis (optional, falls back to disk cache)
REDIS_URL=redis://localhost:6379

# API Settings
API_PORT=8000
API_HOST=0.0.0.0

# Frontend
REACT_APP_API_URL=http://localhost:8000

# Data Sources
MLB_API_DELAY=1  # Seconds between requests
PYBASEBALL_CACHE=./data/cache/pybaseball

# Model Settings
MODEL_UPDATE_SCHEDULE=0 6 * * *  # Daily at 6 AM
BACKTEST_DAYS=30

# Betting Settings
MIN_EDGE_THRESHOLD=0.03  # 3% minimum edge
KELLY_FRACTION=0.25  # Conservative Kelly

# LangChain Settings
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=baseball-ai
